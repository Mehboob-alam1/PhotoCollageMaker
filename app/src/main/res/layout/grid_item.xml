<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        n1:layout_width="match_parent"
        n1:layout_height="wrap_content">

        <com.helloworld.photoeditor.gallerylib.GallerySquareImageView
            n1:id="@+id/imageView"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:scaleType="centerCrop"
            n1:src="@drawable/new_app_iconi" />

        <LinearLayout
            n1:id="@+id/grid_item_text_container"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_below="@+id/imageView"
            n1:layout_alignParentBottom="true"
            n1:alpha="1.0"
            n1:background="#ff111111"
            n1:orientation="vertical"
            n1:paddingLeft="10.0dip"
            n1:paddingTop="10.0dip"
            n1:paddingBottom="10.0dip">

            <TextView
                n1:id="@+id/textView_path"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_alignParentLeft="true"
                n1:layout_alignParentBottom="true"
                n1:layout_weight="2.0"
                n1:singleLine="true"
                n1:textColor="@color/text_white"
                n1:textSize="@dimen/text_size_small"
                n1:textStyle="bold" />

            <TextView
                n1:id="@+id/textViewCount"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_alignParentRight="true"
                n1:layout_alignParentBottom="true"
                n1:layout_weight="1.0"
                n1:singleLine="true"
                n1:text=""
                n1:textColor="@color/text_white"
                n1:textSize="@dimen/text_size_medium"
                n1:textStyle="bold" />
        </LinearLayout>

        <TextView
            n1:id="@+id/textViewSelectedItemCount"
            n1:layout_width="@dimen/gallery_grid_item_selected_item_size"
            n1:layout_height="@dimen/gallery_grid_item_selected_item_size"
            n1:layout_alignParentBottom="true"
            n1:layout_alignParentLeft="true"
            n1:layout_gravity="center"
            n1:background="@color/gallery_ok_button_normal"
            n1:gravity="center"
            n1:text=""
            n1:textColor="#ffffffff"
            n1:textSize="@dimen/text_size_medium"
            n1:textStyle="bold"
            n1:visibility="invisible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>